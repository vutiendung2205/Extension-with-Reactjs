{
  "author": "Pexgle Team",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "/icons/default-16.png",
      "19": "/icons/default-19.png",
      "32": "/icons/default-32.png",
      "38": "/icons/default-38.png"
    },
    "default_title": "Pexgle - All-in-one Hunt Winning Products Toolkit"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "root.js"
      ]
    },
    {
      "js": [
        "shops.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "https://*.aliexpress.com/*",
        "https://*.facebook.com/*",
        "https://*.shopify.com/*",
        "https://*.google.com/*"
      ]
    },
    {
      "js": [
        "aliexpress-product-detail.js"
      ],
      "matches": [
        "https://*.aliexpress.com/item/*",
        "https://*.aliexpress.com/store/product/*",
        "https://*.aliexpress.com/i/*"
      ]
    },
    {
      "js": [
        "facebook.js"
      ],
      "matches": [
        "https://*.facebook.com/",
        "https://*.facebook.com/*"
      ],
      "run_at": "document_end"
    },
    {
      "js": [
        "google.js"
      ],
      "matches": [
        "https://www.google.com/search*"
      ],
      "run_at": "document_end"
    },
    {
      "js": [
        "shopify.js"
      ],
      "matches": [
        "https://apps.shopify.com/*",
        "https://apps.shopify.com/browse/*",
        "https://apps.shopify.com/search?*"
      ],
      "run_at": "document_end"
    },
    {
      "js": [
        "aliexpress-category.js"
      ],
      "matches": [
        "https://*.aliexpress.com/category/*"
      ]
    }
  ],
  "description": "Uncover the hottest winning products from the market and your competitors. See what ads are bringing in the most traffic.",
  "homepage_url": "https://www.pexgle.com/",
  "icons": {
    "128": "icons/pexgle-logo-128.png",
    "16": "icons/pexgle-logo-16.png",
    "48": "icons/pexgle-logo-48.png"
  },
  "manifest_version": 2,
  "name": "Pexgle - Hunt Winning Products Toolkit",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "<all_urls>"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.2.9",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "images/*",
    "icons/*",
    "*.css"
  ]
}